@model List<TodoMVC.Models.Todo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Todo Listesi";
}

<h1>Todo Listesi</h1>

<!-- Yeni Todo Ekle butonu -->
<a asp-controller="Todo" asp-action="Add" class="btn btn-primary mb-4">Yeni Todo Ekle</a>

<h2>Aktif İşler</h2>
<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any(t => !t.IsDone))
        {
            <tr>
                <td colspan="4" class="text-center text-success">Harika, bütün işler tamamlanmış!</td>
            </tr>
        }
        else
        {
            @foreach (var todo in Model.OrderByDescending(v=>v.Updated).Where(t => !t.IsDone))
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.Description</td>
                    <td>@todo.Updated</td>
                    <td><span class="badge bg-warning text-dark">Yapılmadı</span></td>
                    <td>
                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@todo.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Bitir</button>
                        </form>
                        <a asp-action="Update" asp-route-id="@todo.Id" class="btn btn-info btn-sm ms-1">✏️</a>
                        <form asp-action="Delete" method="post" asp-controller="Todo" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@todo.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h2>Biten İşler</h2>
<table class="table table-striped table-bordered">
    <thead class="table-success">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any(t => t.IsDone))
    {
        <tr>
            <td colspan="4" class="text-center text-danger">Henüz biten iş yok.</td>
        </tr>
    }
    else
    {
        @foreach (var todo in Model.OrderByDescending(v=> v.Updated).Where(t => t.IsDone))
        {
            <tr>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.Updated</td>
                <td><span class="badge bg-success">Yapıldı</span></td>
                <td>
                    <form asp-action="ToggleStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@todo.Id" />
                        <button type="submit" class="btn btn-warning btn-sm text-dark">Aktif Et</button>
                    </form>
                    <a asp-action="Update" asp-route-id="@todo.Id" class="btn btn-info btn-sm ms-1">✏️</a>
                    <form asp-action="Delete" method="post" asp-controller="Todo" class="d-inline ms-1">
                        <input type="hidden" name="id" value="@todo.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
