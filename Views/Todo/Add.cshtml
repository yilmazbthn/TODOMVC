@model TodoMVC.Models.Todo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Yeni Todo Ekle";
}

<h1>Yeni Todo Ekle</h1>

<form asp-action="AddTodo" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Başlık</label>
        <input asp-for="Title" class="form-control" required maxlength="20" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4" required maxlength="70"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>